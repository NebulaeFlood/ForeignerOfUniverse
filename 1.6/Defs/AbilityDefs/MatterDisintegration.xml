<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <AbilityDef>
        <defName>FOU_MatterDisintegration</defName>
        <label>matter disintegration</label>
        <description>Commands higher dimensional nanites to disassemble items at elementary level and reconstitute them into new nanites.\nThe heavier the item disassembled, the greater the amount of nanites produced.</description>
        <iconPath>UI/Icons/Abilities/FOU_MatterDisintegration</iconPath>
        <category>FOU_Nanites</category>

        <displayOrder>2</displayOrder>

        <displayGizmoWhileUndrafted>true</displayGizmoWhileUndrafted>
        <disableGizmoWhileUndrafted>false</disableGizmoWhileUndrafted>

        <showGizmoOnWorldView>true</showGizmoOnWorldView>

        <gizmoClass>ForeignerOfUniverse.Gizmos.MatterWeaveAbility</gizmoClass>

        <jobDef>CastAbilityOnThingMelee</jobDef>
        <warmupSound>FOU_NaniteAbilityWarmup</warmupSound>

        <casterMustBeCapableOfViolence>false</casterMustBeCapableOfViolence>
        <hostile>false</hostile>

        <verbProperties>
            <verbClass>Verb_CastAbilityTouch</verbClass>
            <requireLineOfSight>false</requireLineOfSight>

            <range>-1</range>
            <warmupTime>4</warmupTime>

            <soundCast>FOU_MatterDisintegrationCasted</soundCast>

            <targetParams>
                <canTargetSelf>true</canTargetSelf>
                <canTargetPawns>true</canTargetPawns>
                <canTargetBuildings>false</canTargetBuildings>
                <canTargetItems>true</canTargetItems>
                <mapObjectTargetsMustBeAutoAttackable>false</mapObjectTargetsMustBeAutoAttackable>

                <thingCategory>Item</thingCategory>
            </targetParams>
        </verbProperties>

        <comps>
            <li Class="CompProperties_AbilityMoteOnTarget">
                <moteDef>Mote_FOU_MatterFloatAway</moteDef>
            </li>
            <li Class="CompProperties_AbilityEffect">
                <compClass>ForeignerOfUniverse.Comps.AbilityEffects.MatterDisintegration</compClass>
                <goodwillImpact>-75</goodwillImpact>
            </li>
        </comps>
    </AbilityDef>

</Defs>