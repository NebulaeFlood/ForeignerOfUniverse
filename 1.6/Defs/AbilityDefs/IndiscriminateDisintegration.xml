<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <AbilityDef>
        <defName>FOU_IndiscriminateDisintegration</defName>
        <label>indiscriminate disintegration</label>
        <description>Commands higher dimensional nanites to disintegrate matter within a designated area.\n\nPawns holding nanites remain unaffected.\n\nThis ability bypasses line-of-sight requirements via the higher dimensional nanites.</description>
        <iconPath>UI/Icons/Abilities/FOU_IndiscriminateDisintegration</iconPath>
        <category>FOU_Nanites</category>

        <displayOrder>3</displayOrder>

        <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
        <disableGizmoWhileUndrafted>false</disableGizmoWhileUndrafted>

        <warmupSound>FOU_NaniteAbilityWarmup</warmupSound>

        <writeCombatLog>true</writeCombatLog>

        <verbProperties>
            <verbClass>ForeignerOfUniverse.Verbs.CastAbilityDirectly</verbClass>
            <requireLineOfSight>false</requireLineOfSight>

            <range>35</range>
            <warmupTime>8</warmupTime>

            <soundCast>FOU_MatterDisintegrationCasted</soundCast>

            <targetParams>
                <canTargetSelf>true</canTargetSelf>
                <canTargetBuildings>false</canTargetBuildings>
                <canTargetLocations>true</canTargetLocations>
            </targetParams>
        </verbProperties>

        <comps>
            <li Class="ForeignerOfUniverse.Comps.AbilityEffects.Properties_NaniteCost">
                <compClass>ForeignerOfUniverse.Comps.AbilityEffects.IndiscriminateDisintegration</compClass>
                <applyGoodwillImpactToLodgers>false</applyGoodwillImpactToLodgers>
                <goodwillImpact>-45</goodwillImpact>
            </li>
        </comps>
    </AbilityDef>

</Defs>