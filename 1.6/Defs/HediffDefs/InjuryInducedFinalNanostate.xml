<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <HediffDef>
        <defName>FOU_InjuryInducedFinalNanostate</defName>
        <label>injury-induced final nanostate</label>
        <description>The host is no longer in danger of losing life, and higher-dimensional nanites that have not yet completely lost activity will provide the host with enhanced abilities.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <everCurableByItem>false</everCurableByItem>
        <isBad>false</isBad>
        <forceRemoveOnResurrection>true</forceRemoveOnResurrection>

        <stages>
            <li>
                <hungerRateFactor>0.7</hungerRateFactor>
                <painFactor>0.7</painFactor>
                <restFallFactor>0.7</restFallFactor>

                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>0.3</offset>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.3</offset>
                    </li>
                </capMods>

                <statFactors>
                    <IncomingDamageFactor>0.6</IncomingDamageFactor>
                </statFactors>
            </li>
        </stages>

        <comps>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>60000</disappearsAfterTicks>
                <showRemainingTime>true</showRemainingTime>
            </li>
            <li Class="HediffCompProperties_DisappearsOnDeath"/>
        </comps>
    </HediffDef>

</Defs>