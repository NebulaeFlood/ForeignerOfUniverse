<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <HediffDef>
        <defName>FOU_InjuryInducedNanostate</defName>
        <label>injury-induced nNanostate</label>
        <description>Catastrophic trauma triggers emergency nanostate activation. Higher dimensional nanites induce coma to protect consciousness integrity.\n\nComplete bodily annihilation is reversible through 「PHOENIX」, as the host's blueprint remains preserved in transdimensional storage.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <isBad>false</isBad>
        <everCurableByItem>false</everCurableByItem>
        <preventsDeath>true</preventsDeath>
        
        <stages>
            <li>
                <hungerRateFactor>0.05</hungerRateFactor>
                <painFactor>0</painFactor>
                <restFallFactor>0</restFallFactor>

                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.1</setMax>
                    </li>
                </capMods>

            </li>
        </stages>

        <comps>
            <li Class="HediffCompProperties">
                <compClass>ForeignerOfUniverse.Comps.Hediffs.InjuryInducedNanostate</compClass>
            </li>            
            <li Class="HediffCompProperties_DisappearsOnDeath"/>
        </comps>
    </HediffDef>

</Defs>