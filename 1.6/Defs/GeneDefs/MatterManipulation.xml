        <displayCategory>FOU_NaniteProtocol</displayCategory>
        <displayOrderInCategory>15</displayOrderInCategory>

        <abilities>
            <li>FOU_MatterRecovery</li>
            <li>FOU_MatterWeave</li>
            <li>FOU_MatterDisintegration</li>
            <li>FOU_IndiscriminateDisintegration</li>
        </abilities>
        <descriptionHyperlinks>
            <AbilityDef>FOU_MatterRecovery</AbilityDef>
            <AbilityDef>FOU_MatterDisintegration</AbilityDef>
            <AbilityDef>FOU_IndiscriminateDisintegration</AbilityDef>
